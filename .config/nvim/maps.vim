" Use the space as the leader key
let mapleader=" "
nnoremap <SPACE> <Nop>

" Use ctrl-[hjkl] to select the active split!
noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l

" Tab navigation 
nmap te :tabedit 
nmap <S-Tab> :tabprev<Return>
nmap <Tab> :tabnext<Return>" Tabs
